{
  "name": "rescript-remix-blog-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "postinstall": "patch-package && remix setup node",
    "build": "run-s build:css build:res build:remix",
    "build:css": "tailwindcss -m -i ./styles/global.css -o app/styles/global.css",
    "build:res": "rescript build -with-deps",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o app/styles/global.css",
    "dev:res": "rescript build -w -with-deps",
    "dev:remix": "remix dev",
    "start": "remix-serve api"
  },
  "dependencies": {
    "@remix-run/node": "1.1.1",
    "@remix-run/react": "1.1.1",
    "@remix-run/vercel": "1.1.1",
    "@vercel/node": "^1.15.2",
    "ky": "^0.31.1",
    "ky-universal": "^0.10.1",
    "lottie-web": "^5.9.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rescript-swr": "^2.0.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.1.1",
    "@remix-run/eslint-config": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@rescript/react": "^0.10.3",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "bs-fetch": "^0.6.2",
    "concurrently": "^7.2.2",
    "eslint": "^8.15.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.14",
    "remix-esbuild-override": "^3.0.4",
    "rescript": "^9.1.4",
    "rescript-webapi": "^0.6.1",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
